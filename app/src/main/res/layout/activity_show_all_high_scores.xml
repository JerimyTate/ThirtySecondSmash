<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.pressthatbutton.thirtysecondsmash.ShowAllHighScores">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkGreen"
        android:textAlignment="center"
        android:textSize="25sp"
        android:padding="2dp"
        android:textColor="#fff"
        android:text="All High Scores"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDarkGreen"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGreen"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightGreen"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2"
            android:text="Score"/>
    </LinearLayout>

    <ListView
        android:id="@+id/all_score_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorDarkGreen"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:layout_weight="5">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAllToMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightRed"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="Back to Main"/>
        <Button
            android:id="@+id/btnAllToOwn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightBlue"
            android:padding="5dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="Your High Scores"/>
    </LinearLayout>

</LinearLayout>
