<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AllHighScoresFragment"
    android:id="@+id/AllHighScores_Fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightOlive"
        android:textAlignment="center"
        android:textSize="25sp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="#fff"
        android:text="All High Scores"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:text="Score"/>
    <ListView
        android:id="@+id/all_score_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAllToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorLightRed"
            android:layout_weight="1"
            android:textColor="#fff"
            android:text="Back to Main"/>
        <Button
            android:id="@+id/btnAllToOwn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorLightBlue"
            android:layout_weight="1"
            android:textColor="#fff"
            android:text="Your High Scores"/>
    </LinearLayout>
</LinearLayout>
